class Solution {
    
    // This is not binary search, but binary search would be faster but more code
    public String longestCommonPrefix(String[] strs) {
        String res = "";
        if (strs.length > 0 && strs[0].length() > 0) {
            boolean stillGood = true;

            int charIdx = 0;
            while (charIdx < strs[0].length() && stillGood) {
                int arrIdx = 0;
                while (arrIdx < strs.length && stillGood) {
                    if (strs[arrIdx].length() <= charIdx || strs[0].charAt(charIdx) != strs[arrIdx].charAt(charIdx)) {
                        stillGood = false;
                    }
                    arrIdx++;
                }
                
                if (stillGood) {
                    charIdx++;
                }
            }
            
            res = strs[0].substring(0, charIdx);
        }
        
        return res;
    }
}
